<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GetJob.App.Views.Pages.RegisterPage"
             Title="Create Account"
             BackgroundColor="#F4F7FB">
    <!-- Very light background color, consistent with Login -->

    <!-- Main Grid to center the registration card -->
    <Grid Padding="20">
        <Frame CornerRadius="20"
               HasShadow="True"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center"
               Padding="30"
               BackgroundColor="White"
               WidthRequest="350">
            <!-- Consistent card styling and size -->

            <StackLayout Spacing="25"
                         VerticalOptions="Center">

                <!-- 1. Logo/Icon Section (Reused from Login Page) -->
                <StackLayout Orientation="Vertical"
                             HorizontalOptions="Center"
                             Spacing="10">
                    <!-- Placeholder for the circular 'C' logo. -->
                    <Frame HeightRequest="60"
                           WidthRequest="60"
                           CornerRadius="30"
                           BackgroundColor="#4285F4"
                           HorizontalOptions="Center"
                           Padding="0">
                        <!-- Inside the circle, a white C or icon -->
                        <Label Text="C"
                               FontSize="30"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Frame>

                    <!-- App Name Title -->
                    <Label Text="CareerLinker"
                           FontSize="Title"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#1F2937" />
                </StackLayout>

                <!-- Separator -->
                <BoxView HeightRequest="1" Color="#E5E7EB" Margin="0, 10" />

                <!-- 2. Input Fields for Registration -->
                <!-- Added a small introductory label for visual distinction -->
             

                <StackLayout Spacing="15" Margin="0, -15, 0, 0">

                    <!-- Full Name Entry -->
                    <Frame Padding="15, 0"
                           CornerRadius="10"
                           BorderColor="#E5E7EB"
                           HasShadow="False">
                        <Entry Placeholder="Full Name"
                               x:Name="NameEntry"
                               PlaceholderColor="#9CA3AF"
                               Keyboard="Text" />
                    </Frame>

                    <!-- Email Entry -->
                    <Frame Padding="15, 0"
                           CornerRadius="10"
                           BorderColor="#E5E7EB"
                           HasShadow="False">
                        <Entry Placeholder="Email Address"
                               x:Name="EmailEntry"
                               PlaceholderColor="#9CA3AF"
                               Keyboard="Email" />
                    </Frame>

                    <!-- Password Entry -->
                    <Frame Padding="15, 0"
                           CornerRadius="10"
                           BorderColor="#E5E7EB"
                           HasShadow="False">
                        <Entry Placeholder="Password"
                               x:Name="PasswordEntry"
                               PlaceholderColor="#9CA3AF"
                               IsPassword="True" />
                    </Frame>

                    <!-- Confirm Password Entry (New Field) -->
                    <Frame Padding="15, 0"
                           CornerRadius="10"
                           BorderColor="#E5E7EB"
                           HasShadow="False">
                        <Entry Placeholder="Confirm Password"
                               x:Name="ConfirmPasswordEntry"
                               PlaceholderColor="#9CA3AF"
                               IsPassword="True" />
                    </Frame>
                    <Frame Padding="15, 0"
         CornerRadius="10"
         BorderColor="#E5E7EB"
         HasShadow="False">
                        <Label Text=""
                               x:Name="checkPassword"
                               BackgroundColor="Transparent"
                               TextColor="Red">
                            
                        </Label>
                    </Frame>

                </StackLayout>

                <!-- 3. Register Button -->
                <Button Text="Sign Up"
                        x:Name="OnRegister"
                        BackgroundColor="#4285F4"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontSize="Medium"
                        FontAttributes="Bold"
                        Clicked="OnRegister_Clicked" />
                <!-- New C# event handler reference -->

                <!-- 4. Sign In Link -->
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Spacing="5"
                             Margin="0, 10, 0, 0">

                    <Label Text="Already have an account?"
                           TextColor="#4B5563"
                           FontSize="Small"
                           VerticalTextAlignment="Center" />

                    <!-- Link back to the Login Page -->
                    <Button Text="Sign In"
                            TextColor="#4285F4"
                            x:Name="OnSignIn"
                            FontSize="Small"
                            FontAttributes="Bold"
                            BackgroundColor="Transparent"
                            Padding="0"
                            HeightRequest="30"
                            VerticalOptions="Center"
                            Clicked="OnSignIn_Clicked" />

                </StackLayout>

            </StackLayout>

        </Frame>
    </Grid>

</ContentPage>
