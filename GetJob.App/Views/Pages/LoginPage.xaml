<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GetJob.App.Views.Pages.LoginPage"
             Title="Login"
             BackgroundColor="#F4F7FB">
    <!-- Very light background color -->

    <!-- Main Grid to center the login card -->
    <Grid Padding="20">
        <Frame CornerRadius="20"
               HasShadow="True"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center"
               Padding="30"
               BackgroundColor="White"
               WidthRequest="350">
            <!-- Set a max width for desktop/tablet views -->

            <StackLayout Spacing="25"
                         VerticalOptions="Center">

                <!-- 1. Logo/Icon Section -->
                <StackLayout Orientation="Vertical"
                             HorizontalOptions="Center"
                             Spacing="10">
                    <!-- Placeholder for the circular 'C' logo. In a real app, this would be an Image. -->
                    <Frame HeightRequest="60"
                           WidthRequest="60"
                           CornerRadius="30"
                           BackgroundColor="#4285F4"
                           HorizontalOptions="Center"
                           Padding="0">
                        <!-- Inside the circle, a white C or icon -->
                        <Label Text="C"
                               FontSize="30"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Frame>

                    <!-- App Name Title -->
                    <Label Text="CareerLinker"
                           FontSize="Title"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#1F2937" />
                </StackLayout>

                <!-- Separator (optional, for visual break) -->
                <BoxView HeightRequest="1" Color="#E5E7EB" Margin="0, 10" />

                <!-- 2. Input Fields -->
                <StackLayout Spacing="15">
                    <!-- Email / Phone Entry -->
                    <Frame Padding="15, 0"
                           CornerRadius="10"
                           BorderColor="#E5E7EB"
                           HasShadow="False">
                        <Entry Placeholder="Email / Phone"
                               PlaceholderColor="#9CA3AF"
                               Keyboard="Email" />
                    </Frame>

                    <!-- Password Entry -->
                    <Frame Padding="15, 0"
                           CornerRadius="10"
                           BorderColor="#E5E7EB"
                           HasShadow="False">
                        <Entry Placeholder="Password"
                               PlaceholderColor="#9CA3AF"
                               IsPassword="True" />
                    </Frame>
                </StackLayout>

                <!-- 3. Continue Button -->
                <Button Text="Continue"
                        BackgroundColor="#4285F4"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontSize="Medium"
                        FontAttributes="Bold"
                        Clicked="Button_Clicked" />
                <!-- Add C# event handler reference -->

                <!-- 4. Sign Up Link -->
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Spacing="5"
                             Margin="0, 10, 0, 0">

                    <Label Text="Don't have account?"
                           TextColor="#4B5563"
                           FontSize="Small"
                           VerticalTextAlignment="Center" />

                    <!-- Using a Button styled as a link for better touch target/interaction -->
                    <Button Text="Sign Up"
                            TextColor="#4285F4"
                            FontSize="Small"
                            FontAttributes="Bold"
                            BackgroundColor="Transparent"
                            Padding="0"
                            HeightRequest="30"
                            VerticalOptions="Center"
                            Clicked="Button_Clicked_1" />

                </StackLayout>

            </StackLayout>

        </Frame>
    </Grid>

</ContentPage>
