@page "/"
@using GetJob.App.Shared.Services
@inject IFormFactor FormFactor

<PageTitle>GetJob - Find Your Dream Job</PageTitle>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Hero Section -->
    <section class="text-center py-16">
        <h1 class="text-4xl sm:text-5xl font-extrabold text-red-500">
            Welcome to <span class="text-blue-600">Gt</span>
        </h1>
        <p class="mt-4 text-lg sm:text-xl text-gray-700">
            Your trusted platform to connect <b>Job Seekers</b> and <b>Employers</b>.
        </p>

        <div class="mt-6 flex justify-center gap-2">
            <input type="text" placeholder="Search jobs by title, skills, or company..."
                   class="w-1/2 sm:w-1/3 px-4 py-3 border border-gray-300 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <button class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg shadow">
                Search
            </button>
        </div>
    </section>

    <!-- Features Section -->
    <section class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition duration-300">
            <h3 class="text-2xl font-bold text-blue-600 mb-3">For Job Seekers</h3>
            <p class="text-gray-600 mb-5">
                Browse thousands of job postings, apply instantly, and manage your career growth.
            </p>
            <a href="/register" class="inline-block border-2 border-blue-600 text-blue-600 px-6 py-2 rounded-lg font-semibold hover:bg-blue-600 hover:text-white transition">
                Get Started
            </a>
        </div>
        <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition duration-300">
            <h3 class="text-2xl font-bold text-green-600 mb-3">For Employers</h3>
            <p class="text-gray-600 mb-5">
                Post job openings, find skilled candidates, and streamline your hiring process.
            </p>
            <a href="/employer" class="inline-block border-2 border-green-600 text-green-600 px-6 py-2 rounded-lg font-semibold hover:bg-green-600 hover:text-white transition">
                Post a Job
            </a>
        </div>
        <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition duration-300">
            <h3 class="text-2xl font-bold text-yellow-500 mb-3">Secure & Reliable</h3>
            <p class="text-gray-600 mb-5">
                Built with the latest technology (.NET MAUI + Blazor) ensuring top performance and security.
            </p>
            <a href="/about" class="inline-block border-2 border-yellow-500 text-yellow-500 px-6 py-2 rounded-lg font-semibold hover:bg-yellow-500 hover:text-white transition">
                Learn More
            </a>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="bg-gray-100 mt-20 py-16 text-center rounded-xl">
        <h2 class="text-3xl sm:text-4xl font-bold mb-10">Why Choose GetJob?</h2>
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-8 max-w-4xl mx-auto">
            <div>
                <h3 class="text-3xl font-extrabold text-blue-600">10K+</h3>
                <p class="text-gray-600 mt-2">Active Jobs</p>
            </div>
            <div>
                <h3 class="text-3xl font-extrabold text-green-600">5K+</h3>
                <p class="text-gray-600 mt-2">Employers</p>
            </div>
            <div>
                <h3 class="text-3xl font-extrabold text-yellow-500">50K+</h3>
                <p class="text-gray-600 mt-2">Job Seekers</p>
            </div>
            <div>
                <h3 class="text-3xl font-extrabold text-red-600">99%</h3>
                <p class="text-gray-600 mt-2">Satisfaction</p>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="mt-16 py-8 border-t border-gray-300 text-center text-gray-500">
        <p>© <span id="year"></span> GetJob. All rights reserved.</p>
        <small>Running on <em>@factor</em> using <em>@platform</em></small>
    </footer>

</div>

<script>
    document.getElementById('year').textContent = new Date().getFullYear();
</script>


@code {
    private string factor => FormFactor.GetFormFactor();
    private string platform => FormFactor.GetPlatform();
}
