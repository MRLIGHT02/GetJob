@code {
    private bool isMenuOpen = false;
    private void ToggleMenu() => isMenuOpen = !isMenuOpen;
    private void CloseMenu() => isMenuOpen = false;
}

<nav class="fixed top-0 left-0 w-full z-50 flex items-center justify-between bg-[#faf7fa] px-6 py-3 shadow-sm">
    <!-- 🔹 Brand -->
    <div class="flex items-center text-2xl font-bold text-[#662d91]">
        Caree<span class="text-[#ff5547]">rL</span>inker
    </div>

    <!-- 🔹 Desktop Nav -->
    <div class="hidden md:flex space-x-8 text-sm font-semibold text-black">
        <NavLink href="" Match="NavLinkMatch.All" class="hover:text-[#6a45fa] transition-colors">Jobs</NavLink>
        <NavLink href="highlight" class="hover:text-[#6a45fa] transition-colors">Highlight</NavLink>
        <NavLink href="prep" class="hover:text-[#6a45fa] transition-colors">Prep</NavLink>
        <NavLink href="learn" class="hover:text-[#6a45fa] transition-colors">Learn</NavLink>
        <NavLink href="career" class="hover:text-[#6a45fa] transition-colors">Career Advice</NavLink>
    </div>

    <!-- 🔹 Right Section -->
    <div class="flex items-center gap-4">
        <button class="text-lg hover:text-[#6a45fa]" title="Notifications">🔔</button>
        <button class="text-lg hover:text-[#6a45fa]" title="Cart">🛒</button>

        <div class="flex items-center space-x-2 bg-purple-100 rounded-full px-3 py-2 w-max">
            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-purple-300 text-purple-700 font-semibold text-xs">
                SA
            </div>
            <span class="hidden sm:inline text-purple-800 font-semibold text-sm">Hi, Saif</span>

            <!-- 🔹 Mobile Menu Button -->
            <button class="md:hidden focus:outline-none" @onclick="ToggleMenu">
                <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" stroke-width="2"
                     viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>
    </div>
</nav>

<!-- 🔹 Overlay + Slide Menu -->
<div class="fixed inset-0 z-40 transition-opacity duration-300 ease-in-out"
     style="@(isMenuOpen ? "visibility:visible; opacity:1;" : "visibility:hidden; opacity:0;")">

    <!-- Dark Blur Overlay -->
    <div class="absolute inset-0 backdrop-blur-sm bg-black/40 transition-opacity duration-300"
         @onclick="CloseMenu"></div>

    <!-- ✅ Right Drawer -->
    <div class="absolute top-0 right-0 h-full w-64 bg-[#faf7fa] shadow-2xl transform transition-transform duration-300 ease-in-out"
         style="@(isMenuOpen ? "transform: translateX(0);" : "transform: translateX(100%);")">

        <!-- Header -->
        <div class="flex items-center justify-between px-5 py-4 border-b border-gray-200">
            <span class="text-lg font-semibold text-[#662d91]">Menu</span>
            <button class="text-gray-600 hover:text-[#ff5547] text-2xl" @onclick="CloseMenu">×</button>
        </div>

        <!-- Menu Links -->
        <div class="flex flex-col space-y-5 px-6 py-6 text-base font-semibold text-gray-800">
            <NavLink href="" Match="NavLinkMatch.All" @onclick="CloseMenu" class="hover:text-[#6a45fa] transition-colors">Jobs</NavLink>
            <NavLink href="highlight" @onclick="CloseMenu" class="hover:text-[#6a45fa] transition-colors">Highlight</NavLink>
            <NavLink href="prep" @onclick="CloseMenu" class="hover:text-[#6a45fa] transition-colors">Prep</NavLink>
            <NavLink href="learn" @onclick="CloseMenu" class="hover:text-[#6a45fa] transition-colors">Learn</NavLink>
            <NavLink href="career" @onclick="CloseMenu" class="hover:text-[#6a45fa] transition-colors">Career Advice</NavLink>
        </div>
    </div>
</div>
