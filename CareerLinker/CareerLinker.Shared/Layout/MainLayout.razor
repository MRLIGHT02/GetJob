@inherits LayoutComponentBase

<div class="flex min-h-screen flex-col bg-gray-50">
    <!-- 🔹 Include NavMenu -->
    <NavMenu />

    <!-- 🔹 Page Content -->
    <main class="container mx-auto flex-grow px-6 py-8">
        @Body
    </main>
    <Footer/>
</div>

<!-- 🔹 Error UI -->
<div id="blazor-error-ui"
     class="fixed bottom-0 hidden w-full bg-red-100 p-3 text-center text-red-800">
    An unhandled error has occurred.
    <a href="." class="font-medium underline">Reload</a>
    <span class="ml-4 cursor-pointer font-bold">🗙</span>
</div>
